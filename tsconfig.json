{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@packages/components": ["./packages/components/index.ts"],
      "@packages/data": ["./packages/data/index.ts"]
    }
  },
  // "references": [
  //   { "@packages/components": "./packages/components" },
  //   { "@packages/data": "./packages/data" }
  // ],
  // "include": [
  //   // "packages/components/**/*",
  //   // "packages/data/**/*",
  //   // "weapp/src/**/*",
  //   // "website/app/**/*",
  //   // "website/components/**/*"
  // ],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
